{
  "name": "scpdb-interwiki",
  "version": "1.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "micro build -l tcp://127.0.0.1:3001",
    "build": "tsc",
    "dev": "tsc-watch --onSuccess 'micro build -l tcp://127.0.0.1:3001'",
    "inspect": "node --inspect node_modules/.bin/micro-dev build",
    "lint": "eslint app -p-ext='ts'",
    "prepublishOnly": "npm run build",
    "deploy:install": "sudo cp /var/scpdb/interwiki/current/deploy/interwiki.service /etc/systemd/system/scpdb-interwiki.service && sudo systemctl enable scpdb-interwiki",
    "deploy:restart": "sudo systemctl restart scpdb-interwiki",
    "deploy": "np && ssh mars.scpdb.org 'cd /var/scpdb/interwiki && npm upgrade scpdb-interwiki --latest && npm run symlink && cd current && npm run deploy:install && npm run deploy:restart'"
  },
  "files": [
    "app",
    "build",
    "deploy",
    "public",
    "tsconfig.json",
    ".npmrc"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/scpdb/interwiki.git"
  },
  "author": "Gadzhi Gadzhiev <resure@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scpdb/interwiki/issues"
  },
  "homepage": "https://github.com/scpdb/interwiki#readme",
  "dependencies": {
    "dotenv": "^7.0.0",
    "micro": "^9.3.3",
    "micro-query": "^0.3.0",
    "scpdb-logger": "^3.2.2",
    "wikidot-kit": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^11.13.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.16.0",
    "micro-dev": "^3.0.0",
    "tsc-watch": "^2.0.0",
    "typescript": "^3.4.2"
  }
}
